#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    int minPairSum(vector<int>& nums) {
        int mn = INT_MAX, mx = INT_MIN;
        int freq[100001] = {0};

        for (int i = 0; i < nums.size(); i++) {
            mn = min(mn, nums[i]);
            mx = max(mx, nums[i]);
            freq[nums[i]]++;
        }

        int max_sum = 0;
        int l = mn, r = mx;

        while (l <= r) {
            if (freq[l] == 0) {
                l++;
            } else if (freq[r] == 0) {
                r--;
            } else {
                max_sum = max(max_sum, l + r);
                freq[l]--;
                freq[r]--;
            }
        }
        return max_sum;
    }
};

int main() {
    int n;
    cin >> n;

    vector<int> nums(n);
    for (int i = 0; i < n; i++) {
        cin >> nums[i];
    }

    Solution sol;
    cout << sol.minPairSum(nums) << endl;

    return 0;
}
