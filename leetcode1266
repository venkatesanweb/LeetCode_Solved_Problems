#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    int minTimeToVisitAllPoints(vector<vector<int>>& p) {
        int ans = 0;
        for (int i = 1; i < p.size(); i++) {
            ans += max(
                abs(p[i][0] - p[i - 1][0]),
                abs(p[i][1] - p[i - 1][1])
            );
        }
        return ans;
    }
};

int main() {
    Solution sol;
    vector<vector<int>> points = {
        {1, 1},
        {3, 4},
        {-1, 0}
    };

    cout << sol.minTimeToVisitAllPoints(points) << endl;

    return 0;
}
